<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemPurchaseActivity">

    <!--    This is where the user goes when they click on purchase in the -->
    <!--    This is where the user goes when they click on purchase in the detailed view browse fragment-->

    <TextView
        android:id="@+id/textCheckOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textProductName"
        android:textAlignment="center"
        android:text="Check Out"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/textProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textProductPrice"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_above="@id/editTextFirstName"
        />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/editTextLastName"

        android:ems="10"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/editTextPhone"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/editTextPostalAddress"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="phone"
        android:hint="Phone Number"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editTextPostalAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/editTextCity"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:hint="Address"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerInParent="true"

        android:hint="City"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editTextState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@id/editTextCity"
        android:hint="State"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editTextZip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/editTextState"
        android:inputType="number"
        android:hint="Zip Code"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editTextCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/editTextZip"
        android:inputType="number"
        android:hint="Card Number"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editTextCVV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/editTextCardNumber"
        android:inputType="number"
        android:hint="CVV"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editTextExpiration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/editTextCVV"
        android:inputType="date"
        android:hint="Expiration"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextExpiration"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:text="Confirm" />

    <Button
        android:id="@+id/btn_goback"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextExpiration"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:text="Go Back" />



</RelativeLayout>