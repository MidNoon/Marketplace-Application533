<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="10dp">
    <!--    This Activity is only shown to users that are logged in
        This Activity is an Intersection for the major parts of the app
        Buttons on this app:
            Item Browse -> Takes user to BrowseActivity
            Manage Items -> Takes user to the ItemActivity
            View Invoices -> Takes user to the InvoiceActivity
            Manage Profile -> Takes user to ProfileManageActivity
            Logout -> ACTION -> LOGS USER OUT
    -->

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_main_browse"
        android:text="Main Menu"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        />


    <Button
        android:id="@+id/button_main_browse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Browse Products" />

    <Button
        android:id="@+id/button_main_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_main_browse"
        android:layout_marginTop="10dp"
        android:text="Management" />

    <Button
        android:id="@+id/button_main_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_main_item"
        android:layout_marginTop="10dp"
        android:text="Settings" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_main_settings"
        android:layout_marginTop="10dp"
        android:text="Log Out" />



</RelativeLayout>